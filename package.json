{
  "name": "agent-credit-demo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "deploy:cf": "bun run build && bunx wrangler pages deploy",
    "lint": "eslint .",
    "preview": "vite preview",
    "sim:selftest": "bun run src/scripts/sim-selftest.ts",
    "sim:autodiag": "bun run src/scripts/sim-autodiag.ts",
    "sim:status": "bun run src/scripts/sim-autodiag.ts --steps 400 --trials 80 --mode ui --allow-failures --json-out reports/status-now.json --md-out reports/status-now.md",
    "sim:stress-grid": "bun run src/scripts/sim-stress-grid.ts --steps-grid 400 --trials-short 40 --trials-long 40",
    "sim:gate1": "bun run src/scripts/sim-selftest.ts --steps 100 --trials 30 --max-failed-trial-ratio 0",
    "sim:gate2": "bun run src/scripts/sim-autodiag.ts --steps 200 --trials 20 --mode ui --json-out reports/gate2-autodiag.json",
    "sim:gate3": "bun run src/scripts/sim-autodiag.ts --steps 400 --trials 20 --mode ui --json-out reports/gate3-autodiag.json",
    "sim:gates": "bun run sim:gate1 && bun run sim:gate2 && bun run sim:gate3",
    "judge:codex": "bun run src/scripts/codex-judge.ts"
  },
  "dependencies": {
    "framer-motion": "^12.34.3",
    "immer": "^11.1.4",
    "katex": "^0.16.33",
    "react": "19",
    "react-dom": "19",
    "react-markdown": "^10.1.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.2.1",
    "@types/katex": "^0.16.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.2.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  }
}
